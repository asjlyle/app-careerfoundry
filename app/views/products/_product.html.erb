      <div class="col-lg-4 col-md-4 product">
        <h2><%= product.name %></h2>
        <div>
            <%=image_tag(product.image_url)%>
        </div>
        <p><%= product.description %></p>
        <p><%= product.colour %></p>
        <span><%= link_to 'Show', product %></span>
        <span><%= link_to 'Edit', edit_product_path(product) %></span>
        <span><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></span>
        <% if signed_in? %>
        <h4>Add a review:</h4>
        <%= form_for([@product, @product.comments.build]) do |f| %>
          <p>
            <%= f.label :body, "Comments" %><br>
            <%= f.text_area :body %>
          </p>
          <p>
            <%= f.label :rating %><br>
            <%= f.text_field :rating, class: "rating" %>
          </p>  
          <p>
            <%= f.submit “Submit” %>
          </p>
        <% end %>
    <% end %>    
      </div>  

<br>